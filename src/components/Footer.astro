---
import { Icon } from "astro-icon/components";

const routes = [
  { name: "Inicio", path: "/" },
  { name: "Categorias", path: "/recursos" },
  { name: "Cursos", path: "/cursos" },
];

const categories = [
  { name: "Matemáticas básicas", path: "/recursos/matematicas-basicas" },
  { name: "Programación", path: "/recursos/programacion" },
  { name: "Desarrollo Web", path: "/recursos/desarrollo-web" },
  {
    name: "Inteligencia Artificial",
    path: "/recursos/inteligencia-artificial",
  },
  { name: "Electrónica e IoT", path: "/recursos/electronica-iot" },
  { name: "Calculo y fisica", path: "/recursos/calculo-y-fisica" },
];

const socialNetworks = [
  "instagram",
  "github",
  "linkedin",
  "youtube",
  "portfolio",
];
---

<footer class="p-4 sm:p-6 mt-4 lg:mt-32">
  <div class="mx-auto max-w-screen-xl">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <a href="https://flowbite.com" class="flex items-center">
          <Icon
            name="rocket"
            class="size-6 lg:size-8 mr-3 dark:text-blue-400 text-blue-700"
          />
          <span
            class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white text-gray-900"
            >ProfeSantiago</span
          >
        </a>
      </div>
      <div class="grid grid-cols-2 gap-8">
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Enlaces rápidos
          </h2>
          <ul class="text-gray-600 dark:text-gray-400">
            {
              routes.map((route) => (
                <li class="mb-4">
                  <a
                    href={route.path}
                    class="hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-200 ease-in-out"
                  >
                    {route.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Categorías
          </h2>
          <ul class="text-gray-600 dark:text-gray-400">
            {
              categories.map((category) => (
                <li class="mb-4">
                  <a
                    href={category.path}
                    class="hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-200 ease-in-out"
                  >
                    {category.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
        >© 2025 <a href="https://flowbite.com" class="hover:underline"
          >Santiago Suarez</a
        >. Todos los derechos reservados.
      </span>
      <div class="flex mt-4 space-x-6 sm:justify-center sm:mt-0">
        {
          socialNetworks.map((network) => (
            <a
              href="#"
              class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
            >
              <Icon name={network} class="w-5 h-5" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
