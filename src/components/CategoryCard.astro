---
import { Icon } from "astro-icon/components";

const { category, description, icon } = Astro.props;
---

<div
  class="w-full p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 hover:shadow-lg dark:hover:shadow-blue-900 transition-shadow duration-300 ease-in-out flex flex-col justify-between"
>
  <div class="p-3 bg-blue-100 rounded-lg dark:bg-blue-900 max-w-max text-white">
    <Icon name={icon} class="size-7" />
  </div>

  <h5
    class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white mt-4"
  >
    {category}
  </h5>

  <p class="mb-3 font-normal text-gray-500 dark:text-gray-400">
    {description}
  </p>
  <a
    href="#"
    class="inline-flex text-sm font-medium items-center text-blue-600 gap-1"
  >
    Ver cursos
    <Icon name="arrow-right" class="size-5" />
  </a>
</div>
